    <div class="actor-background" style="background-image: url('https://image.tmdb.org/t/p/w300<%= actor.file_path %>');width: 250px;height:250px;">
    
      <p class="count" style="font-size: 11em"><%= actor.count %></p>
      <h3><%= actor.name %></h3>
      0 of <%= actor.movies %> movies 
    </div>
  </a>
</div>

    <% }) %>
